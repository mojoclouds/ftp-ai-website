---
layout: base.njk
---

  <!-- Post Header -->
  <section class="page-header">
    <div class="container">
      <span class="section-label fade-in">Blog</span>
      <h1 class="fade-in fade-in-delay-1">{{ title }}</h1>
      <p class="fade-in fade-in-delay-2 post-meta">{{ date | dateFormat }}{% if author %} &middot; {{ author }}{% endif %}</p>
    </div>
  </section>

  <!-- Post Content -->
  <section class="section" style="padding-top: 20px;">
    <div class="container">
      <article class="post-content fade-in">
        {{ content | safe }}
      </article>

      <div class="post-footer fade-in">
        <a href="{{ '/blog/' | url }}" class="btn btn-outline">&larr; Back to Blog</a>
      </div>
    </div>
  </section>
